<script>
  
$(document).ready(function(){

  var op = 2;

  $('#newop').click(function(){

      op += 1;
      $('#d').append('<div class="form-group" id = "'+op+'"><label for="option'+ op +'">Option' + op +'</label><input type="text" class="form-control" id="opt' + op +'" name="option' + op +'"></div>');
        console.log(op);
  });

  $('#rmop').click(function(){

    if(op >= 3){
      $('#'+op+'').remove();
      op -= 1;
      console.log(op);
    }
    else{
      alert("You need atleat two options to create a poll");
    }

  });

});

</script>