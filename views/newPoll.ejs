    <h1>Create your Polls Here</h1>

    <div class = "sign">
      <form role="form" method="post" id = "f">
      <div id = 'd' class = 'table'>
          <div class="form-group">
            <label for="question">Question</label>
            <input type="text" class="form-control" id="que" name="question">
          </div>

          <div class="form-group" id = '1'>
            <label for="option1">Option1</label>
            <input type="text" class="form-control" id="opt1" name="option1">
          </div>

          <div class="form-group" id = '2'>
            <label for="option2">Option2</label>
            <input type="text" class="form-control" id="opt2" name="option2">
          </div>
      </div><br>
          <input type="submit" class="btn btn-success" value="Submit">
          <input type="button" class="btn" value="Add Option" id = "newop">
          <input type="button" class="btn" value="Remove Option" id = "rmop">

      </form>
    </div>
  </body>
