            <input type="text" class="form-control" style="background:transparent;color:black;border:solid black;border-radius:5px" id="usrname" name="name">
          </div>
          <div class="form-group">
            <label for="psw">Password</label>
            <input type="password" class="form-control" style="background:transparent;color:black;border:solid black;border-radius:5px" id="psw" name="password">
          </div>
          <input type="submit" class="btn btn-success btn-block w3-theme-dark-blue w3-padding" value="Login">
      </form>
    </div>
